@model List<DUT_HelpDesk.DatabaseModels.Faq>
@{
    ViewData["Title"] = "FAQ";
}
@*For Deletion*@
@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">
        <b>@TempData["Msg"]</b>
    </div>
}

<div>
    <h1>FAQ</h1>
    <br />
    <a asp-controller="Technician" asp-action="TechCreateFAQ">Create FAQ</a>
    <br />
    <br />
    @foreach (var item in Model)
    {
        @if (item != null)
        {
            <div style="background-color: #F1F1F1; padding: 10px; border-radius: 10px;">
                <table class="table">
                    <tr>
                        <th style="width:2%">Q:</th>
                        <td style ="width:90%"><strong>@Html.DisplayFor(modelItem => item.Question)</strong></td>

                        <td><a asp-action="Delete" asp-route-id="@item.FaqId" style="color: red;">Delete</a></td>

                    </tr>
                    <tr>
                        <th style="width:2%">A:</th>
                        <td style="width:90%">@Html.DisplayFor(modelItem => item.Answer)</td>
                        <td></td>
                    </tr>
                </table>
            </div>
            <br />
        }
    }
</div>
