@model DUT_HelpDesk.DatabaseModels.Ticket

<h1>My Replies</h1>


<div>
    <h2>Ticket Details</h2>
    <p><strong>Subject:</strong> @Model.Subject</p>
    <p><strong>Query Body:</strong> @Model.QueryBody</p>
    <p><strong>Date Created:</strong> @Model.DateCreated</p>
</div>


<h2>Enter Your Reply</h2>
<form method="post">
    <div class="form-group">
        <label for="replyText">Reply:</label>
        <textarea id="replyText" name="ReplyText" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Reply</button>
</form>
