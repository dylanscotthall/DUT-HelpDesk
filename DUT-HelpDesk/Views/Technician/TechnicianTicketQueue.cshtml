@model List<DUT_HelpDesk.DatabaseModels.Ticket>
@{
    ViewData["Title"] = "Technician Lead";
    string[] tickets = new string[3];
}

@section scripts{
    <script>
        function SetSort(dropdown, startDate, endDate) {

            window.location.href = "/Technician/TechnicianTicketQueue?sortBy=" + dropdown + "&startDate=" + startDate + "&endDate=" + endDate;

        }
    </script>
    }

<div>
    <h1>Ticket Queue</h1>
    <br />
    <nav>
        <span>
            @Html.DropDownList("Sortby", new SelectListItem[] { new SelectListItem()
            { Text = "Date", Value = "Date" }, new SelectListItem()
            { Text = "Date Down", Value = "Status" }, new SelectListItem()
            { Text = "Alpha", Value = "Alpha"}})
        </span>
        <span>
            @if (ViewBag.startDate != null)
            {
                <input id="startDate" class="form-control" @*onchange="SetSort(this.value)"*@ type="date" value="@ViewBag.startDate" />
            }
            else
            {
                <input id="startDate" class="form-control col-sm-5" @*onchange="SetSort(this.value)"*@ type="date" />
            }
        </span>
        <span>
            @if (ViewBag.endDate != null)
            {
                <input id="endDate" class="form-control col-sm-5" @*onchange="SetSort(startDateId.value, endDateId.value)"*@ type="date" value="@ViewBag.endDate" />
            }
            else
            {
                <input id="endDate" class="form-control col-sm-5" @*onchange="SetSort(startDateId.value, endDateId.value)"*@ type="date" @*value="@DateTime.Today.ToString("yyyy-MM-dd")"*@ />
            }
        </span>
        <span>
            <input id="filter" class="form-control col-sm-5" type="button" value="Filter" onclick="SetSort(Sortby.value, startDate.value, endDate.value)" />
        </span>
    </nav>
    <table class="table table-responsive table-hover">
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Current Technicians</th>
            <th></th>
        </tr>
        <br />
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                if (item != null)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
                        <td>@Html.DisplayFor(modelItem => item.Priority)</td>
                        <td>@Html.DisplayName("status")</td>
                        @if (item.TechnicianCount == null)
                        {
                            <td>@Html.DisplayName("0")</td>
                        }
                        else
                        {
                            <td>@Html.DisplayFor(modelItem => item.TechnicianCount)</td>
                        }
                        <td>@Html.ActionLink("Details", "TechnicianDashboardDetail", "Technician", new { id=item.TicketId }, null)</td>
                        @if (item.TicketTechnicians.Where(x => x.TechnicianId == ViewBag.technician.TechnicianId && x.IsAssigned == true).FirstOrDefault() != null)
                        {
                            <td>@Html.ActionLink("Unaccept", "UnassignTicketToTechnician", "Technician", new { id=item.TicketId, techId=ViewBag.technician.TechnicianId }, null)</td>
                        }
                        else
                        {
                            <td>@Html.ActionLink("Accept", "AssignTicketToTechnician", "Technician", new { id=item.TicketId, techId=ViewBag.technician.TechnicianId }, null)</td>
                        }
                    </tr>
                }
            }
        }
    </table>
</div>



