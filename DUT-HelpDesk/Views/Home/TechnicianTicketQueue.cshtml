@model List<DUT_HelpDesk.DatabaseModels.Ticket>
@{
    ViewData["Title"] = "Technician Lead";
    string[] tickets = new string[3];
}

<div>
    <h1>Ticket Queue</h1>
    <br />
    <table class="table table-responsive table-hover">
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Current Technicians</th>
            <th></th>
        </tr>
        <br />
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                if (item != null)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
                        <td>@Html.DisplayFor(modelItem => item.Priority)</td>
                        <td>@Html.DisplayName("status")</td>
                        @if (item.TechnicianCount == null)
                        {
                            <td>@Html.DisplayName("0")</td>
                        }
                        else
                        {
                            <td>@Html.DisplayFor(modelItem => item.TechnicianCount)</td>
                        }
                        <td>@Html.ActionLink("Details", "TechnicianDashboardDetail", new { id=item.TicketId })</td>
                        @if (item.TicketTechnicians.Where(x => x.TechnicianId == ViewBag.technician.TechnicianId && x.IsAssigned == true).FirstOrDefault() != null)
                        {
                            <td>@Html.ActionLink("Unaccept", "UnassignTicketToTechnician", new { id=item.TicketId, techId=ViewBag.technician.TechnicianId })</td>
                        }
                        else
                        {
                            <td>@Html.ActionLink("Accept", "AssignTicketToTechnician", new { id=item.TicketId, techId=ViewBag.technician.TechnicianId })</td>
                        }
                    </tr>
                }
            }
        }
    </table>
</div>



