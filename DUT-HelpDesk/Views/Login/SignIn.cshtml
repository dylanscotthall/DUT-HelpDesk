@model DUT_HelpDesk.DatabaseModels.User

@{
    ViewData["Title"] = "SignIn";
}


<div class="row justify-content-center">
<h4>Please enter your Login Credentials</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="FbId" class="control-label"></label>
                <input asp-for="FbId" class="form-control" />
                <span asp-validation-for="FbId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label>@ViewBag.Error</label>
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
